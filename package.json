{
  "name": "mahjongle",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "concurrently": "^8.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "nodemon": "^2.0.16",
    "pg": "^8.7.3",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "client": "yarn --cwd client run start",
    "server": "nodemon index",
    "start": "concurrently \"yarn run server\" \"yarn run client\"",
    "angular": "npm run start --prefix \"packages/mahjongle-angular\"",
    "dotnet": "dotnet watch --project \"packages/mahjongle-dotnet-api\" run"
  }
}
